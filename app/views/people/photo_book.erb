<% content_for :title, 'Photo Book' %>
<%= render :partial => "course_dropdown_js" %>

<h1>Photo Book (alpha)</h1>
<div class="right_link" ><%= link_to 'See people', :action => 'index' %><br/>
<%= link_to 'See phone book', :action=>'phone_book' %></div>

<div style="float:none" id="search">
  <% form_tag(photo_book_path, :method => :post) do %>
    Student: <%= check_box_tag 'search_person_type[]', "Student", check_checkbox(@list_options[:search_person_type], 'Student') %>
    Faculty: <%= check_box_tag 'search_person_type[]', 'Faculty', check_checkbox(@list_options[:search_person_type], 'Faculty') %>
    Everyone Else: <%= check_box_tag 'search_person_type[]', 'Everyone Else', check_checkbox(@list_options[:search_person_type], 'Everyone Else') %> <br />
    Masters Program: <%= text_field_tag('search_grad_prog', @list_options[:search_grad_prog]) %><br />
    Graduation Year: <%= text_field_tag('search_grad_year', @list_options[:search_grad_year]) %><br />
    Part-time: <%= check_box_tag 'search_is_part_time[]', 't', check_checkbox(@list_options[:search_is_part_time], 't') %>
    Full-time: <%= check_box_tag 'search_is_part_time[]', 'f', check_checkbox(@list_options[:search_is_part_time], 'f') %><br />
    <%= render :partial => "course_dropdown" %>
    <%= submit_tag "Update list" %>
  <% end %>
</div>

<% for person in @people %>
    <div width="200"><%= render :partial=>'people/twiki_photo_link', :locals => {:person => person} %></div>
<% end %>
<br/>