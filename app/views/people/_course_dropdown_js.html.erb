<%= javascript_include_tag 'jquery.cascadingDropDown'%>
<script type="text/javascript">
  $(document).ready(function ()
  {
    $("#search_course_year").CascadingDropDown("#search_course_name", '/courses/years_for_course',
    {
        promptText: '-- Pick a year --'
    });

    $("#search_course_semester").CascadingDropDown("#search_course_year", '/courses/semesters_for_course_and_year',
    {
        promptText: '-- Pick a semester --',
        postData: function() {
          return { search_course_name: $("#search_course_name").val(), search_course_year: $("#search_course_year").val() };
        }
    });
  })
</script>