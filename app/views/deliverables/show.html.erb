<% content_for :title, @deliverable.title %>
<p>
  <b>Name:</b>
  <%=h @deliverable.title %>
</p>

<p>
  <b>File:</b>
  <%=link_to(@deliverable.deliverable_file_name, @deliverable.deliverable.url)%>
</p>

<p>
  <b>Task Number:</b>
  <%=(@deliverable.task_number ? h(@deliverable.task_number) : "<i>Not provided</i>")%>
</p>

<p>
  <b>Team:</b>
  <%=h @deliverable.team.name %>  <%=h @deliverable.team.course.year %>  <%=h @deliverable.team.course.mini %>
</p>

<p>
  <b>Faculty:</b>
  <%=h @deliverable.team.primary_faculty.human_name %>
</p>

<p>
  <b>Feedback:</b>
  <% if @deliverable.feedback %>
     <%=link_to(@deliverable.feedback_file_name, @deliverable.feedback.url)%>
  <% else %>
     <i>Feedback has not been provided at this time.</i>
  <% end %>
</p>

<p>
  <b>Comments:</b>
  <%=(@deliverable.comments ? simple_format(@deliverable.comments) : "<i>None</i>") %>
</p>

<br><br>
<%= link_to 'Edit', edit_deliverable_path(@deliverable) if @deliverable.canView?(@current_user) %> |
<%= link_to 'Back', deliverables_path %>
