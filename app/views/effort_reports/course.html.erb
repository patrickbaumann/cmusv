<% content_for :title, 'Effort Report for ' + @course.name  %>

<head>
<script src="/javascripts/prototype.js"></script>
<script src="/javascripts/application.js"></script>
<script src="/javascripts/controls.js"></script>
<script src="/javascripts/effects.js"></script>
<script src="/javascripts/calendar_date_select/calendar_date_select.js"></script>
<%= stylesheet_link_tag "calendar_date_select/red" %>
</head>
<body>

  <div>
    <table><tr><td><%= link_to "Back to Effort Reports for this course", effort_report_path(params[:course_id]) %></td></tr>
      <tr><td><a href="<%=url_for :action=>"index", :id => params[:id], :week => nil, :only_path=>true%>">Back to Effort Reports main page</a></td></tr>
    </table>
  </div>

<div>
<% form_for :panel_state, @panel_state, :url => {:action => "course", :id=> params[:id]} do |f| %>
  <table>
    <tr>
      <td>
  Date
<%= f.calendar_date_select :date, :year_range => [2000, 2020], :size => 20 %>
      </td>
      
       <td>
        <%= f.submit "Update" %>
      </td>
    </tr>
  <tr>
      <td>
        Year
        <%= f.text_field :year, :size => 4 %>        
        Week
        <%= f.text_field :week_number, :size => 2 %>
      </td>
       <td>
        Course
        <%= f.text_field :course_id, :size => 2 %>
      </td>
       <td>
        <%= f.submit "Update" %>
      </td>
  </tr></table>
  <% end %>
